@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduling.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="logoff" asp-controller="Account">
        <ul class="navbar navbar-nav">
            <li class="nav-link">Hello, @User.Identity.Name!</li>
            <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">log off</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li>
            <a class="nav-link" id="registerLink" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li>
            <a class="nav-link" id="loginLink" asp-action="Login" asp-controller="Account">Sign In</a>
        </li>
    </ul>
}

